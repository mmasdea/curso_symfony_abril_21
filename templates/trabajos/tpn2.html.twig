{% extends 'base.html.twig' %}
 
{% block title %}TPN2{% endblock %}
 
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
 
<div class="example-wrapper">

    {% if valor == 1 %} 
        <h1 style="text-align: center">TPN2 - Curso Symfony 4</h1>
    {% endif %}     

    {%  for i in 0..15  %}
        {% if i==10 %}
            <div> {{"Articulo N°"|upper}} {{i}} <u>ITEM Seleccionado con IF !!!</u></div>
        {% else %}
            <div> {{"Articulo N°"|upper}} {{i}}</div>
        {% endif %}

    {% endfor %} 

    <ul>
        <li style="text-align: center;"><a href="/home">Volver al Inicio</a></li>
    </ul>
</div>
{% endblock %}